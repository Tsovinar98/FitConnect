<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77F3E9"
    android:orientation="vertical"
    android:paddingTop="5dp"
    tools:context=".CreateEventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#77F3E9"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton_ce_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#77F3E9"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="#77F3E9"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/profilepic" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_ce_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#77F3E9"
        android:text="Fill out below to create your own post!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#77F3E9"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_ce_eventTitle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/input_background"
            android:ems="10"
            android:hint="Title"
            android:inputType="textPersonName"
            android:paddingHorizontal="5dp"
            android:textColor="#000000"
            android:textColorHint="#595959" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_today" />

            <EditText
                android:id="@+id/editText_ce_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/input_background"
                android:ems="10"
                android:hint="Date"
                android:inputType="date"
                android:paddingHorizontal="5dp"
                android:textColor="#000000"
                android:textColorHint="#595959" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_today" />

            <EditText
                android:id="@+id/editText_ce_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/input_background"
                android:ems="10"
                android:hint="Time"
                android:inputType="time"
                android:paddingHorizontal="5dp"
                android:textColor="#000000"
                android:textColorHint="#595959" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_today" />

            <EditText
                android:id="@+id/editText_ce_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/input_background"
                android:ems="10"
                android:hint="Location of Event"
                android:inputType="textPostalAddress"
                android:paddingHorizontal="5dp"
                android:textColor="#000000"
                android:textColorHint="#595959" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_today" />

            <EditText
                android:id="@+id/editText_ce_maxAttendees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/input_background"
                android:ems="10"
                android:hint="Max Number of Attendees"
                android:inputType="textPostalAddress"
                android:paddingHorizontal="5dp"
                android:textColor="#000000"
                android:textColorHint="#595959" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_ce_description"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_background"
            android:ems="10"
            android:gravity="top"
            android:hint="Describe your event"
            android:inputType="textPersonName"
            android:paddingHorizontal="5dp"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textColorHint="#595959" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_ce_createEvent"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_background"
            android:minWidth="1dip"
            android:minHeight="1dip"
            android:radius="15dp"
            android:text="create event"
            android:textColor="#000000" />
    </LinearLayout>


</LinearLayout>