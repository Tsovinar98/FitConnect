<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#77F3E9"
    tools:context=".IndividualEventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#77F3E9"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton_ie_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#77F3E9"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10" />

        <ImageButton
            android:id="@+id/imageButton_ie_profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="#77F3E9"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/profilepic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#77F3E9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_ie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textFontWeight="900"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_ie_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="12sp"
                android:text="Date" />

            <TextView
                android:id="@+id/textView_ie_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="12sp"
                android:text="Time" />

            <TextView
                android:id="@+id/textView_ie_attendees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="12sp"
                android:text="# / # Attendees" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_ie_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12sp"
            android:text="OPusername" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/button_ie_attend"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_background"
            android:minWidth="1dip"
            android:minHeight="1dip"
            android:radius="15dp"
            android:text="+ Attend Event"
            android:textColor="#000000">

        </Button>

        <TextView
            android:id="@+id/textView_ie_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView_ie_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Event Description"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:background="#000000"
        android:orientation="vertical">

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton_ie_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        app:srcCompat="?attr/actionModeShareDrawable" />

</LinearLayout>