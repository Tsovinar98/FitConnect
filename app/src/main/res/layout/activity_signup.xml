<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="289dp"
            android:background="#77F3E9
"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="What's better than fitness?"
                android:textColor="#000000" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_soccerball"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:src="@drawable/soccergif" />

            <TextView
                android:id="@+id/textView_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:text="@string/signup_bottomtext" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText_su_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_background"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                android:paddingHorizontal="5dp"
                android:textColor="#000000"
                android:textColorHint="#595959" />

            <EditText
                android:id="@+id/editText_su_firstName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_background"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:paddingHorizontal="5dp"
                android:textColor="#000000"
                android:textColorHint="#595959" />

            <EditText
                android:id="@+id/editText_su_lastName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_background"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:paddingHorizontal="5dp"
                android:textColor="#000000"
                android:textColorHint="#595959" />

            <EditText
                android:id="@+id/editText_su_username"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_background"
                android:ems="10"
                android:hint="Username"
                android:inputType="textPersonName"
                android:paddingHorizontal="5dp"
                android:textColor="#000000"
                android:textColorHint="#595959" />

            <EditText
                android:id="@+id/editText_su_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_background"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPersonName"
                android:paddingHorizontal="5dp"
                android:textColor="#000000"
                android:textColorHint="#595959" />

            <TextView
                android:id="@+id/textView_su_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="25dp"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_su_selectLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_background"
                android:text="Find My Location"
                android:textColor="#000000" />

            <Button
                android:id="@+id/button_su_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_background"
                android:text="SIGN UP"
                android:textColor="#000000" />

            <ProgressBar
                android:id="@+id/progressBar_su_loadingSpinner"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>